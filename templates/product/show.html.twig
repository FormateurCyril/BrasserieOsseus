{% extends 'base.html.twig' %}

{% block title %} {{ product.name }} {% endblock %}

 {% block body %}

    <div class="jumbotron text-center mt-4">
        <div class="row">
            <div class="col-md-8">
                <img src="{{ vich_uploader_asset(product, 'imageFile')| imagine_filter('my_thumb') }}" alt="">
            </div>
            <div class="col-md-4">
                <h1>{{ product.name }}</h1>
                <h3><strong>{{ product.price }} €</strong></h3>

                <button class="btn btn-primary">Contacter nous</button>
            </div>
        </div>

    </div>

     <div class="row">
         <div class="col-md-6">
             <table class="table table-striped">
                 <thead class="thead-dark">
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ product.title }}</td>
                    </tr>
                    <tr>
                        <th>Style</th>
                        <td>{{ product.style }}</td>
                    </tr>
                    <tr>
                        <th>Couleur</th>
                        <td>{{ product.color }}</td>
                    </tr>
                    <tr>
                        <th>Degrès</th>
                        <td>{{ product.degrees }}</td>
                    </tr>
                 </thead>
             </table>
         </div>
         <div class="col-md-6">
             <h4>Description</h4>
             <p>{{ product.description }}</p>
         </div>
     </div>

 {% endblock %}
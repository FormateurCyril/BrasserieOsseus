{% extends 'base.html.twig' %}

{% block title %} {{ product.name }} {% endblock %}

 {% block body %}

     <div class="jumbotron text-center mt-4">
         <div class="row">
             <div class="col-md-8">
                 {% if product.pictures is empty %}
                     <img src="{{ asset('images/empty.jpg') | imagine_filter('my_medium') }}" alt="">
                 {% else %}
                     <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                         <div class="carousel-inner">
                             {% for picture in product.pictures %}
                                 <div class="carousel-item {% if loop.first %} active {% endif %}">
                                     <img src="{{ vich_uploader_asset(picture, 'imageFile')| imagine_filter('my_medium') }}"
                                          style="width: 70%;height: auto" alt="card-img-top">
                                 </div>
                             {% endfor %}
                         </div>
                         <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                            data-slide="prev">
                             <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                             <span class="sr-only">Previous</span>
                         </a>
                         <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                            data-slide="next">
                             <span class="carousel-control-next-icon" aria-hidden="true"></span>
                             <span class="sr-only">Next</span>
                         </a></div>
                 {% endif %}
             </div>
             <div class="col-md-4">
                 <h1>{{ product.name }}</h1>
                 <h3><strong>{{ product.price }} €</strong></h3>
                     <div class="input-group">
                         <div class="input-group-append">
                             <a href="{{ path('product.add', {id: product.id}) }}" data-reserve data-token="{{ csrf_token('reserve' ~ product.id) }}" class="mt-5" method="GET">Réserver</a>
                         </div>
                     </div>
             </div>
         </div>

     </div>

     <div class="row">
         <div class="col-md-6">
             <table class="table table-striped">
                 <thead class="thead-dark">
                 <tr>
                     <th>Nom</th>
                     <td>{{ product.name }}</td>
                 </tr>
                 <tr>
                     <th>Title</th>
                     <td>{{ product.title }}</td>
                 </tr>
                 <tr>
                     <th>Style</th>
                     <td>{{ product.style }}</td>
                 </tr>
                 <tr>
                     <th>Couleur</th>
                     <td>{{ product.color }}</td>
                 </tr>
                 <tr>
                     <th>Degrès</th>
                     <td>{{ product.degrees }}</td>
                 </tr>
                 </thead>
             </table>
         </div>
         <div class="col-md-6">
             <h4>Description</h4>
             <p>{{ product.description }}</p>


         </div>
     </div>

     <h2>Commentaires</h2>
     <div class="row">
         <div class="col">
             {{ form_start(form_comment) }}
             {{ form_widget(form_comment) }}
             <div class="row">
                 <label for="notesA">Notes : </label>
                 <div class="items-wrap">
                     <div class="item-star">
                         {% for i in 1..10 %}
                             <input id="star-row{{ i }}-col-{{ i }}" name="star-row{{ i }}" type="radio"
                                    value="{{ 6 - i }}"/>
                             <label for="star-row{{ i }}-col-{{ i }}">
                                 <i class="ion-beer"></i>
                             </label>
                         {% endfor %}
                     </div>
                 </div>
                 <br>
             </div>
             <div class="row">
                 <input type="submit" value="Commenter" class="btn btn-primary">
             </div>

             {{ form_end(form_comment) }}
         </div>
     </div>

     {% for comment in comments if comments is not empty %}
         <div class="row mt-3">
             <div class="col-md-3">
                 <div class="card">
                     <div class="card-header">
                         {{ comment.pseudo }}
                     </div>
                     <div class="card-body">
                         {{ comment.message }}<br>
                         {{ comment.note }}
                     </div>
                 </div>
             </div>
         </div>
     {% endfor %}

     <div class="navigation mt-4 d-flex justify-content-center">
         {{ knp_pagination_render(comments) }}
     </div>

 {% endblock %}